# https://github.com/Homebrew/homebrew-bundle

# ```sh
# brew tap bundle
# brew bundle --global
# ```

tap 'homebrew/bundle'

# fonts
tap 'caskroom/fonts'

cask 'font-fontawesome'
cask 'font-hack'

# applications
cask 'alfred'
cask 'appcleaner'
cask 'basictex'
