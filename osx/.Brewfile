# https://github.com/Homebrew/homebrew-bundle

# ```sh
# brew tap bundle
# brew bundle --global
# ```

tap 'homebrew/bundle'
tap 'homebrew/completions'
tap 'homebrew/dupes'
tap 'homebrew/science'
tap 'homebrew/versions'

# applications
cask '1password'
cask 'alfred'
cask 'appcleaner'
cask 'basictex'
cask 'calibre'
cask 'charles'
cask 'chromium'
cask 'colorpicker'
cask 'colorpicker-hex'
cask 'enpass'
cask 'fliqlo'
cask 'flux'
cask 'hammerspoon'
cask 'iterm2'
cask 'karabiner'
cask 'kobo'
cask 'licecap'
cask 'liteicon'
cask 'mpv'
cask 'nosleep'
cask 'prey'  # requires API_KEY
cask 'rodeo'
cask 'rstudio'
cask 'slack'
cask 'spotify'
cask 'ssh-tunnel-manager'
cask 'tex-live-utility'
cask 'xquartz'

# command line
brew 'R'
brew 'ag'
brew 'awscli'
brew 'cabal-install'
brew 'curl'
brew 'docker'
brew 'docker-machine'
brew 'drake'
brew 'fasd'
brew 'git', args: ['with-brewed-curl', 'with-brewed-openssl']
brew 'gnupg2', args: ['with-readline']
brew 'gnutls'
brew 'gpg-agent'
brew 'hadoop'
brew 'hive'
brew 'imagemagick'
brew 'jq'
brew 'leiningen'
brew 'lua'
brew 'maven'
brew 'openssl'
brew 'p7zip'
brew 'pandoc'
brew 'pinentry-mac'
brew 'postgresql'
brew 'pow'
brew 'python', args: ['with-brewed-openssl']
brew 'python3'
brew 'ranger'
brew 'rbenv'
brew 'readline'
brew 'rlwrap'
brew 's3cmd'
brew 'sbt'
brew 'scala'
brew 'scala', args: ['with-docs']
brew 'scalastyle'
brew 'tmux'
brew 'tmux-mem-cpu-load'
brew 'trash'
brew 'unrar'
brew 'vim', args: ['override-system-vi']
brew 'vimpager'
brew 'youtube-dl'
brew 'yuicompressor'
brew 'zsh', args: ['without-etcdir']

# linuxifacation
brew 'coreutils'
brew 'ed', args: ['default-names']
brew 'findutils', args: ['with-default-names']
brew 'gawk'
brew 'gnu-indent', args: ['with-default-names']
brew 'gnu-sed', args: ['with-default-names']
brew 'gnu-tar', args: ['with-default-names']
brew 'gnu-which', args: ['with-default-names']
brew 'grep', args: ['with-default-names']

# email
brew 'mu', args: ['HEAD', 'with-emacs']
brew 'offlineimap'

# Emacs
brew 'aspell', args: ['with-lang-en']
brew 'emacs', args: ['with-cocoa', 'with-dbus', 'with-gnutls', 'with-glib', 'with-imagemagick', 'with-librsvg', 'with-mailutils']
brew 'ghostscript'  # for doc-view-mode
brew 'surfraw'  # for the helm-surfraw command

## GIS
tap 'osgeo/osgeo4mac'

brew 'osmosis'
brew 'postgis'
brew 'qgis-28'
