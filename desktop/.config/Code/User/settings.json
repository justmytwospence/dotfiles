{
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.watcherExclude": {
        "**/.ammonite": true,
        "**/.bloop": true,
        "**/.metals": true
    },
    "git.enableSmartCommit": true,
    "python.testing.pytestEnabled": true,
    "redhat.telemetry.enabled": false,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen", // ctrl+p
        "-workbench.action.terminal.focusFind", // ctrl-f
    ],
    "vim.camelCaseMotion.enable": true,
    "vim.changeWordIncludesWhitespace": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // leader
        {
            "before": ["<leader>", "g"],
            "commands": [
                "magit.status",
            ]
        },
        {
            "before": ["<leader>", "d"],
            "commands": [
                "editor.debug.action.toggleBreakpoint",
            ]
        },
        {
            "before": [ "<leader>", "q" ],
            "commands": [ ":q" ],
        },
        {
            "before": [ "<leader>", "w" ],
            "commands": [
                "editor.action.trimTrailingWhitespace",
            ],
        },
        {
            "before": [ "<leader>", "x" ],
            "commands": [
                "workbench.action.showCommands",
            ],
        },
        // unimpaired.vim
        {
            "before": [ "]", "d" ],
            "commands": [
                "editor.debug.action.goToNextBreakpoint"
            ],
        },
        {
            "before": [ "[", "d" ],
            "commands": [
                "editor.debug.action.goToPreviousBreakpoint"
            ],
        },
        {
            "before": [ "[", "b" ],
            "commands": [ ":bprev" ],
        },
        {
            "before": [ "]", "b" ],
            "commands": [ ":bnext" ],
        },
        {
            "before": [ "]", "c" ],
            "commands": [
                "editor.action.dirtydiff.next"
            ],
        },
        {
            "before": [ "[", "c" ],
            "commands": [
                "editor.action.dirtydiff.previous"
            ],
        },
        {
            "before": [ "[", "f" ],
            "commands": [
                "workbench.view.explorer",
                "list.focusUp",
                "explorer.openAndPassFocus"
            ],
        },
        {
            "before": [ "]", "f" ],
            "commands": [
                "workbench.view.explorer",
                "list.focusDown",
                "explorer.openAndPassFocus"
            ],
        },
        {
            "before": [ "[", "l" ],
            "commands": [
                "editor.action.marker.prevInFiles",
            ],
        },
        {
            "before": [ "]", "l" ],
            "commands": [
                "editor.action.marker.nextInFiles",
            ],
        },
    ],
    "vim.replaceWithRegister": true,
    "vim.smartRelativeLine": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "workbench.colorTheme": "One Dark Pro Darker",
    "files.trimTrailingWhitespace": true,
    "docker.containers.groupBy": "State",
    "docker.containers.description": [
        "Compose Project Name",
        "Status"
    ],
    "docker.containers.label": "ContainerName",
    "docker.containers.sortBy": "Label",
    "docker.volumes.groupBy": "None",
    "docker.volumes.sortBy": "Label",
    "docker.networks.sortBy": "Label",
}