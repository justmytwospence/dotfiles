#!/usr/bin/env bash
# setup-dotfiles: bootstrap dotfiles on a remote host

if [[ $(uname) == Darwin ]]; then
    ssh $1 'bash -s' << '        EOF'
        git clone \
            https://github.com/andsens/homeshick.git \
            ${HOME}/.homesick/repos/homeshick
        source ${HOME}/.homesick/repos/homeshick/homeshick.sh
        homeshick clone --force --verbose justmytwospence/dotfiles
        homeshick link --force --verbose
        chmod --recursive g-w ${HOME}/.homesick ${HOME}/.zsh
    EOF
fi